<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F45B8F"
    tools:context=".login">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="401dp"
        android:layout_height="71dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/bad_script"
        android:text="Shop N' Surprise"
        android:textAlignment="center"
        android:textColor="#F8F5F5"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="304dp"
        android:layout_height="399dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="102dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="102dp"
            android:text="Customer Login"
            android:textColor="#E83874"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_login3"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="297dp"
            android:layout_height="34dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="12dp"
            android:foreground="@drawable/sign_in_facebook"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.58"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <Button
            android:id="@+id/btn_login4"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="297dp"
            android:layout_height="34dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:foreground="@drawable/sign_in_google"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login3"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <EditText
            android:id="@+id/edittext_sellerpass"
            android:layout_width="291dp"
            android:layout_height="41dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName|textPassword"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_selleremail"
            android:layout_width="292dp"
            android:layout_height="42dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="none"
            android:singleLine="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnsellerlogin"
            android:layout_width="305dp"
            android:layout_height="41dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="11dp"
            android:backgroundTint="#F45B8F"
            android:fontFamily="@font/open_sans_bold"
            android:text="login"
            android:textAlignment="center"
            android:textColor="#F9FBFB"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_sellerpass" />

        <Button
            android:id="@+id/btncustomer"
            android:layout_width="87dp"
            android:layout_height="34dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#F45B8F"
            android:fontFamily="@font/open_sans_bold"
            android:text="Sellers "
            android:textAlignment="center"
            android:textColor="#F9FBFB"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.352"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login4" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="177dp"
            android:layout_marginEnd="177dp"
            android:text="OR"
            android:textColor="#0C0C0C"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnsellerlogin" />

        <Button
            android:id="@+id/btn_sellercreateacc"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="108dp"
            android:layout_height="24dp"
            android:layout_marginStart="122dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="123dp"
            android:background="#FFFFFF"
            android:fontFamily="serif-monospace"
            android:text="create account"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>