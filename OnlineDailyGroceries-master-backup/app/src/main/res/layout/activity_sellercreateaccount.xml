<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F45B8F"
    tools:context=".sellercreateaccount">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="327dp"
        android:layout_height="454dp"
        android:layout_marginBottom="104dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_allreadyreg"
            style="@android:style/Widget.Holo.Light.Button.Small"
            android:layout_width="165dp"
            android:layout_height="19dp"
            android:layout_marginStart="81dp"
            android:layout_marginTop="428dp"
            android:layout_marginEnd="81dp"
            android:background="#FFFFFF"
            android:fontFamily="serif"
            android:text="All Ready  Registered!"
            android:textAlignment="center"
            android:textColor="#797A7A"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="319dp"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="4dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName|textPassword"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="none"
            android:singleLine="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_emailaddress" />

        <EditText
            android:id="@+id/edittext_repassword"
            android:layout_width="319dp"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:ems="10"
            android:hint="Retype Password"
            android:inputType="textPersonName|textPassword"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="none"
            android:singleLine="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_password" />

        <EditText
            android:id="@+id/edittext_emailaddress"
            android:layout_width="319dp"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="204dp"
            android:layout_marginEnd="4dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="none"
            android:singleLine="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/edittext_cnumber"
            android:layout_width="319dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="4dp"
            android:ems="10"
            android:hint="Contact Number"
            android:inputType="textPersonName"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="none"
            android:singleLine="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/edittext_cAddress"
            android:layout_width="319dp"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="4dp"
            android:ems="10"
            android:hint="Complete Address"
            android:inputType="textPersonName"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="none"
            android:singleLine="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/edittext_selleremail"
            android:layout_width="319dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="4dp"
            android:ems="10"
            android:hint="Fullname"
            android:inputType="textPersonName"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="none"
            android:singleLine="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/edittext_shopname"
            android:layout_width="319dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="4dp"
            android:ems="10"
            android:hint="Shop Name"
            android:inputType="textPersonName"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="none"
            android:singleLine="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <Button
            android:id="@+id/btnsellerlogin"
            android:layout_width="320dp"
            android:layout_height="42dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="11dp"
            android:backgroundTint="#F45B8F"
            android:fontFamily="@font/open_sans_bold"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="#F9FBFB"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_repassword" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="102dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="102dp"
            android:text="Create Account"
            android:textColor="#E83874"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/banner"
        android:layout_width="401dp"
        android:layout_height="71dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bad_script"
        android:text="Shop N' Surprise"
        android:textAlignment="center"
        android:textColor="#F8F5F5"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>